<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="6"
    android:layout_gravity="center"

    tools:context=".PhoneDialerActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:id="@+id/dialedNumber"
        android:editable="false" />
    <ImageButton
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="center"
        android:src="@drawable/backspace"
        android:id="@+id/KEY_BACKSPACE"
        android:onClick="onClickBackspaceButton"
        />

    <Button
        android:id="@+id/KEY1"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="onClickKeyButton"
        android:text="1" />
    <Button
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="2"
        android:id="@+id/KEY2"
        android:onClick="onClickKeyButton"
        />
    <Button
        android:layout_row="1"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="3"
        android:id="@+id/KEY3"
        android:onClick="onClickKeyButton"
        />
    <Button
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center"
        android:text="4"
        android:id="@+id/KEY4"
        android:onClick="onClickKeyButton"
        />
    <Button
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="center"
        android:text="5"
        android:id="@+id/KEY5"
        android:onClick="onClickKeyButton"
        />
    <Button
        android:layout_row="2"
        android:layout_column="2"
        android:layout_gravity="center"
        android:text="6"
        android:id="@+id/KEY6"
        android:onClick="onClickKeyButton"
        />
    <Button
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="center"
        android:text="7"
        android:id="@+id/KEY7"
        android:onClick="onClickKeyButton"
        />
    <Button
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="center"
        android:text="8"
        android:id="@+id/KEY8"
        android:onClick="onClickKeyButton"
        />
    <Button
        android:layout_row="3"
        android:layout_column="2"
        android:layout_gravity="center"
        android:text="9"
        android:id="@+id/KEY9"
        android:onClick="onClickKeyButton"
        />
    <Button
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="center"
        android:text="*"
        android:id="@+id/KEY_STAR"
        android:onClick="onClickKeyButton"
        />
    <Button
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="center"
        android:text="0"
        android:id="@+id/KEY0"
        android:onClick="onClickKeyButton"
        />
    <Button
        android:layout_row="4"
        android:layout_column="2"
        android:layout_gravity="center"
        android:text="#"
        android:id="@+id/KEY_DIEZ"
        android:onClick="onClickKeyButton"
        />

    <ImageButton
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="center"
        android:src="@drawable/call"
        android:id="@+id/KEY_CALL"
        android:onClick="onClickCallButton"
        />
    <ImageButton
        android:layout_row="5"
        android:layout_column="2"
        android:layout_gravity="center"
        android:src="@drawable/hangup"
        android:id="@+id/KEY_HANGUP"
        />


</GridLayout>